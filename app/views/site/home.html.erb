<table>
<tr></tr>
<% @about.each do |news| %>
	<tr>
	<td width=80%><h3><%= news.title %></h3></td>
	<% if can? :manage, :all %>
			   <td width=20%>	
			   <%= button_to 'Edit', edit_news_path(news), method: :get %>
			   </td>
		   <% end %>

			   <tr></tr>
			   <tr>
				   <td colspan=2><%= news.content %></td>
			   </tr>
		   <% end %>
		   </table>

		   <table class=alt>
			   <tr align = middle>
				   <td><%= button_to "CMIP5 Daily Analysis", daily_cmip5s_path, method: :get %></td>
				   <td><%= button_to "Mult-Models Analysis", mult_cmip5s_path, method: :get %></td>
			   </tr>
		   </table>

		   <p></p>

		   <h2>News & Update notes</h2>

		   <table>
			   <thead>
				   <tr>
					   <th>Date</th>
					   <th>Title</th>
					   <th>Version</th>
					   <th>Operation</th>
				   </tr>
			   </thead>

			   <tbody>
			   <% @news.each do |news| %>
				   <tr>
				   <td><%= news.date.strftime("%Y-%m-%d") %></td>
				   <td><%= news.title %></td>
				   <td><%= news.version %></td>
				   <td><%= button_to 'Show', news, method: :get %></td>
			   </tr>
		   <% end %>
			   </tbody>
		   </table>

