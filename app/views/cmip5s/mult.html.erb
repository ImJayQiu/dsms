	<tr></tr>
	<tr align=middle>
		<td>
			<div id="map">map</div>
		</td>
	</tr>
	<tr></tr>
	<tr align=middle>
		<td>
			<table id="result">
				<tr></tr>
				<tr>
					<td>Lon.</td> 
					<td>W:</td>
					<td><input type="text" class="slon" ></td>
					<td>E:</td>
					<td><input type="text" class="elon" ></td>
					<td>Lat.</td> 
					<td>S:</td>
					<td><input type="text" class="slat" ></td>
					<td>N:</td>
					<td><input type="text" class="elat" ></td>
				</tr>
			</table>
