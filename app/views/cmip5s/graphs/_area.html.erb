<script src='http://code.jquery.com/jquery-2.0.3.js'></script>
<script src="http://d3js.org/d3.v3.min.js"></script>
<script src="http://d3js.org/topojson.v1.min.js"></script>
<script src="http://bl.ocks.org/grahamjenson/raw/8168412/worldtopo.js"></script>

<div id='js-geojson-example'></div>
<style>

.background {
	fill: #a4bac7;
}

.foreground {
	fill: none;
	stroke: #333;
	stroke-width: 1.5px;
}

.graticule {
	fill: none;
	stroke: #fff;
	stroke-width: .5px;
}

.graticule :nth-child(2n) {
	stroke-dasharray: 2,2;
}

.land {
	fill: #d7c7ad;
	stroke: #766951;
}

.geojson {
	fill: none;
	stroke: red;
	stroke-width: 2;
}

.boundary {
	fill: none;
	stroke: #a5967e;
}

</style>


<script>

var width = $(window).width(),
	height = $(window).height();

//var sc = Math.min(width,height) * 0.1  

	var projection = d3.geo.equirectangular()
	.center([105, 65])
	.scale(100)
.translate([width/4,height/4])
	.rotate([-180,0]);

var path = d3.geo.path()
	.projection(projection);

	var graticule = d3.geo.graticule();

	var svg = d3.select("#js-geojson-example").append("svg")
	.attr("width", width)
	.attr("height", height);

	svg.selectAll(".land")
.data([topojson.feature(worldtopo, worldtopo.objects.land)])
	.enter().append('path')
	.attr('class','land')
	.attr("d", path);

	cook = {"type": "LineString", "coordinates": <%= area %> }

	svg.selectAll(".geojson").data([cook])
.enter()
	.append("path")
	.attr("class","geojson")
	.attr("d", path);

</script>
