<h2>User Management</h2>
<%if can? :manage, :users%>
	<table class="alt" >
	<thead>
		<tr>
			<th>User Name</th>
			<th>E-mail</th>
			<th>Role</th>
			<th colspan="3">Operations</th>
		</tr>
	</thead>

	<tbody>
	<% @users.each do |user| %>
		<tr>
		<td><%= user.username %></td>
		<td><%= user.email %></td>
		<td><%= user.role %></td>
		<td><%= button_to 'Show', user, method: :get %></td>
		<td><%= button_to 'Edit', edit_user_path(user) , method: :get%></td>
		<td><%= button_to 'Del', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
	</tbody>
</table>

<br>

<%= link_to('New User', new_registration_path(:user)) %>
<% else %>
	Permission Denied !
<% end %>
