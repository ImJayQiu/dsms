<% if can? :manage, :users %>

	<%= form_for(@user) do |f| %>

	<% if @user.errors.any? %>
	<div id="error_explanation">
	<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

	<ul>
		<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
	<% end %>
	</ul>
</div>
  <% end %>

<table>

	<tr>
		<td>User Name:</td>
		<td><%= f.text_field :username %></td>
	</tr>
	<tr>
		<td>E-Mail:</td>
		<td><%= f.text_field :email %></td>
	</tr>
	<tr>
		<td>Role:</td>
		<td><%= f.collection_select :role, Common::ROLES, :to_s, :humanize %></td>
	</tr>
	<tr>
		<td>New Password</td>
		<td><%= f.password_field :password, autofocus: true, autocomplete: "off" %></td>
	</tr>

	<tr>
		<td>Confirm New Password</td>
		<td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
	</tr>

</table>

<%= f.hidden_field :reset_password_token %>

<table>
	<tr>
		<td><%= f.submit %></td>
		<% end #form %>
		<td><%= button_to 'Back', users_path, method: :get %></td>
	</tr>
</table>

<% end #can %>
