<p id="notice"><%= notice %></p>

<h2>Listing Variables</h2>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Fullname</th>
			<th>Unit</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @settings_variables.each do |settings_variable| %>
		<tr>
		<td><%= settings_variable.name %></td>
		<td><%= settings_variable.fullname %></td>
		<td><%= settings_variable.unit %></td>
		<td><%= button_to 'Show', settings_variable, method: :get %></td>
		<% if can? :manage, :settings %>
			<td><%= button_to 'Edit', edit_settings_variable_path(settings_variable), method: :get %></td>
		<td><%= button_to 'Del', settings_variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
	</tr>
<% end %>
	</tbody>
</table>

<br>

<%= button_to 'Add New Variable', new_settings_variable_path, method: :get %>
