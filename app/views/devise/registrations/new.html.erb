<div class="inner">
	<h2>CDAAS.RIMES<br/>Sign Up</h2>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
	<div align=center>
		<div class="6u 12u$(xsmall)">
			<%= f.text_field :username, autofocus: true, placeholder: "Username" %>
		</div>

		<p/>

		<div class="6u 12u$(xsmall)">
			<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
		</div>

		<p/>

		<div class="6u$ 12u$(xsmall)">
			<% if @validatable %>
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
		<% else %> 
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
		<% end %>
		</div>

		<p/>

		<div class="6u$ 12u$(xsmall)">
			<% if @validatable %>
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
		<% else %> 
				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password" %>
		<% end %>
		</div>
		<p/>
		<div class="6u$ 12u$(xsmall)">
			<%= f.submit "Sign Up" %>
		</div>
	</div>
<% end %>
</div>
