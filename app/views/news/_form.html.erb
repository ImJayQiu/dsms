	</tr>
	<tr></tr>

	<tr>
		<td>
			Title:
		</td>
		<td>
			<%= f.text_field :title %>
		</td>
	</tr>
	<tr></tr>
	<tr>
		<td>
			Content:
		</td>
		<td>
			<%= f.text_area :content %>
		</td>
	</tr>
	<tr></tr>
	<tr>
		<td>
			Version:
		</td>
		<td>
			<%= f.text_field :version %>
		</td>
	</tr>
	<tr></tr>
	<tr align=middle>
		<td>
			<%= f.submit "Submit" %>
		<% end %>
		</td>
		<td>
			<%= button_to 'Back', news_index_path, method: :get %>
