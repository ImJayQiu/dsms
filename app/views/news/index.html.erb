<p id="notice"><%= notice %></p>

<h2>Listing News & Update notes</h2>

<table>
	<tr>
		<th>
			<%= will_paginate @news %>
		</th>
	</tr>
</table>

<table>
	<thead>
		<tr>
			<th>Date</th>
			<th>Title</th>
			<th>Version</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
	<% @news.each do |news| %>
		<tr>
		<td><%= news.date.strftime("%Y-%m-%d") %></td>
		<td><%= news.title %></td>
		<td><%= news.version %></td>
		<td><%= button_to 'Show', news, method: :get %></td>
		<% if can? :manage, :all %>
			<td><%= button_to 'Edit', edit_news_path(news), method: :get %></td>
		<td><%= button_to 'Del', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
	</tr>
<% end %>
	</tbody>
</table>
<table>
	<tr>
		<th>
			<%= will_paginate @news %>
		</th>
	</tr>
</table>


<br>

<% if can? :manage, :all %>
	<%= button_to 'New Record', new_news_path, method: :get %>
	<% end %>
