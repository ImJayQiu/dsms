<script>
$(function() {
		$( "#lon_range" ).slider({
range: true,
min: -180,
max: 180,
values: [ -180, 180 ],
slide: function( event, ui ) {
$( "#lon_amount" ).val(  ui.values[ 0 ] + " ~ " + ui.values[ 1 ] );
$( "#s_lon" ).val(  ui.values[ 0 ] );
$( "#e_lon" ).val(  ui.values[ 1 ] );
}
});
		$( "#lon_amount" ).val(  $( "#lon_range" ).slider( "values", 0 ) +
			" ~ " + $( "#lon_range" ).slider( "values", 1 ) );
		$( "#s_lon" ).val(  $( "#lon_range" ).slider( "values", 0 ));
		$( "#e_lon" ).val(  $( "#lon_range" ).slider( "values", 1 ));


		});
</script>
