<p id="notice"><%= notice %></p>
<h2>ECMWF Forcasting <%= @date %></h2>


<table>
	<tr>
	</tr>
	<tr>
		<td style="width:50%;" align="center">

			<% if @sel_data.nil? %>

				<%= @status.html_safe %>

		<% else %>

				<a href= <%= root_url + @cdaas_output_dir.to_s + @output_name.to_s + "_all.gif" %> target = "_blank" >
				<%= image_tag root_url + @cdaas_output_dir.to_s + @output_name.to_s + "_all.gif" , width: "50%" %>
				<br/>Click image to enlarge
			</a>

			<% end # if @sel_data.nil? %>

		</td>
	</tr>
</table>

<p/>

<% if can? :download, :nc %>
	<table>
	<tbody>
	<tr>
		<td>
			<%= button_to "Download NC", root_url + @cdaas_output_dir.to_s+@output_name.to_s+".nc", method: :get %>
		</td>
		<td>
			<%= button_to "Download CTL", root_url + @cdaas_output_dir.to_s+@output_name.to_s+".ctl", method: :get %>
		</td>
		<td>
			<%= button_to "Download CSV", root_url + @cdaas_output_dir.to_s+@output_name.to_s+".csv", method: :get %>
		</td>
	</tr>
	</tbody>
</table>
<% end # if can? :download, :nc %>


<p/>

<% if can? :analyze, :dataset %>

	<table>
	<thead>
		<tr>
			<th>Dataset Analysis Operations</th>
			<th>
				<div class="buttons">
					<input type="button" class="analysis" value="Show Operations"/>
				</div>
			</th>
		</tr>
	</thead>
</table>

<div class="content_analysis" style="display:none" >


	<%= render "ecmwf/forms/form_daily_analysis" %>

	<table>
		<tr>
			<td align=center>
				<div class="buttons">
					<input type="button" class="analysis" value="Hide Analysis Operators"/>
				</div>

			</td>
		</tr>
	</table>

	<% end # if can? :analyze, :dataset %>

</div>
<p/>
