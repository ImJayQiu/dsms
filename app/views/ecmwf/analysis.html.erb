	<tr>
		<td style="width:50%;" align="center">
			<a href= <%= root_url + @cdaas_output_dir.to_s + @output_name.to_s + "_all.gif" %> target = "_blank" >
				<%= image_tag root_url + @cdaas_output_dir.to_s + @output_name.to_s + "_all.gif" , width: "50%" %>
